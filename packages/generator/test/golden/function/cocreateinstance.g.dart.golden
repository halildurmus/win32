/// <https://learn.microsoft.com/windows/win32/api/combaseapi/nf-combaseapi-cocreateinstance>.
///
/// {@category ole32}
T CoCreateInstance<T extends IUnknown>(
  Pointer<GUID> rclsid,
  IUnknown? pUnkOuter,
  CLSCTX dwClsContext,
) {
